{
    "version": "2.0.0",
    "tasks": [
      {
        "type": "shell",
        "label": "Build all C files with custom clang",
        "command": "/opt/local/bin/clang",
        "args": [
          "-std=c17",
          "-g",
          "${workspaceFolder}/*.c",         // <-- compile all C files
          "-o",
          "${workspaceFolder}/app"          // <-- output binary name
        ],
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "problemMatcher": ["$gcc"],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      }
    ]
  }
  